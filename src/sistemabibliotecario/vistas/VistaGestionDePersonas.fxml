<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<GridPane 
    id="GridPane"  
    prefHeight="720.0" 
    prefWidth="900.0"
    xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" 
    fx:controller="sistemabibliotecario.controladores.ControladorGestionDePersonas">
    
    <stylesheets>
        <URL value="@../estilos/EstiloGeneral.css" />
    </stylesheets>
    
    <Label
        text="Gestión de Personas UV" 
        styleClass="titulo"
        prefWidth="900"
        alignment="BASELINE_CENTER" 
        GridPane.rowIndex="0" />
    <VBox 
        alignment="CENTER"
        prefWidth="900"
        spacing="180"
        GridPane.rowIndex="1">
        <padding>
            <Insets top="130"/>
        </padding>
        <VBox alignment="CENTER" spacing="35">
            <Button 
                text="Buscar Persona UV"
                styleClass="boton-solido"
                prefWidth="300"/>
            <Button 
                text="Gestión de Personas UV"
                styleClass="boton-solido"
                prefWidth="300"/>
        </VBox>
        <Button 
            text="Atrás"
            styleClass="boton-negativo-solido"
            prefWidth="150"/>
    </VBox>
    
</GridPane>
